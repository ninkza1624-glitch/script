local StatusLabel = Status:NewLabel("à¸žà¸£à¹‰à¸­à¸¡à¹ƒà¸Šà¹‰à¸‡à¸²à¸™")

Main:NewToggle("Auto Farm Anos [VIP]","",function(v)
    if v then
        StartAutoHop(StatusLabel)
    else
        S.AutoFarm=false
        S.Running=false
        StatusLabel:UpdateLabel("â¸ à¸«à¸¢à¸¸à¸”à¹à¸¥à¹‰à¸§")
    end
end)

Main:NewToggle("Auto Equip","",function(v)
    S.AutoEquip = v
end)

