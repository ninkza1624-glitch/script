end)

Equip:NewTextBox("Add Tool Name","à¹€à¸Šà¹ˆà¸™ Combat / Katana",function(txt)
    if txt~="" then table.insert(S.EquipList,txt) end
end)

Equip:NewButton("Clear Equip List","",function()
    table.clear(S.EquipList)
end)

local ListLabel = Equip:NewLabel("List: (empty)")
task.spawn(function()
    while task.wait(1) do
        if #S.EquipList>0 then
            ListLabel:UpdateLabel("List: "..table.concat(S.EquipList,", "))
        else
            ListLabel:UpdateLabel("List: (empty)")
        end
    end
end)

